<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Terre1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D40000</item>
        <item name="colorPrimaryDark">#800000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Ayuda" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D4AA00</item>
        <item name="colorPrimaryDark">#806600</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Terremoto" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">#FF5555 </item>
    </style>

    <style name="Vinetas" parent="TextAppearance.AppCompat.Medium">
        <item name="android:padding">10dp</item>
    </style>

    <style name="Mochila" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D45500</item>
        <item name="colorPrimaryDark">#803300</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MochilaTex" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">#FF9955 </item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
